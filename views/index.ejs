<!DOCTYPE html>
<html ng-app="MainAppModule">
  <% include header.ejs %>

  <body>
      <nav class="navbar navbar-default" role="navigation">
      	   <div class="container-fluid">
      	       <div class="navbar-header">
      	       	    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#not-google-plus-nav">
      	       	    	<span class="sr-only">Toggle Navigation</span>
      	       	    	<span class="icon-bar"></span>
      	       	    	<span class="icon-bar"></span>
      	       	    	<span class="icon-bar"></span>
      	       	    </button>
      	       	    <a href="/" class="navbar-brand">Not Google Plus</a>
      	       </div><!-- end navbar-brand -->

      	       <div class="collapse navbar-collapse" id="not-google-plus-nav">
      	       	    <ul class="nav navbar-nav pull-right">
      	       	    	<% if (user.isAuthenticated()) { %>
      	       	    	    <li><a href="/+<%= user.payload.username %>">+<%= user.payload.username %></a></li>
      	       	    	    <li><a href="/+<%= user.payload.username %>/settings">Settings</a></li>
      	       	    	    <li><a href="javascript:void(0)">Logout</a></li>
      	       	    	<% } else { %>
      	       	    	     <li><a href="/login">Login</a></li>
      	       	    	     <li><a href="/register">Register</a></li>
      	       	    	<% } %>
      	       	    </ul>
      	       </div>
      	   </div>
      </nav><!-- end navbar -->
      
      <div class="container-fluid">
      	   <div class="row">
      	   	    <div class="col-xs-12 ng-view"></div>
      	   </div>
      </div>

  </body>

  <% include footer.ejs %>
</html>
